{
  "name": "Employee",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "role": {
      "type": "string",
      "enum": [
        "doorman",
        "cleaner",
        "maintenance",
        "gardener",
        "security",
        "manager",
        "other"
      ],
      "description": "Fun\u00e7\u00e3o"
    },
    "phone": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "cpf": {
      "type": "string"
    },
    "photo_url": {
      "type": "string"
    },
    "hire_date": {
      "type": "string",
      "format": "date"
    },
    "contract_type": {
      "type": "string",
      "enum": [
        "clt",
        "outsourced",
        "temporary"
      ],
      "default": "clt"
    },
    "company_name": {
      "type": "string",
      "description": "Empresa terceirizada"
    },
    "salary": {
      "type": "number"
    },
    "work_schedule": {
      "type": "string"
    },
    "vacation_start": {
      "type": "string",
      "format": "date"
    },
    "vacation_end": {
      "type": "string",
      "format": "date"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "emergency_contact": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "role"
  ]
}